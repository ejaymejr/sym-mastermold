function MenuPhpToJavascript($menuname, $submenu)
{
	$mess = '
		var '.$menuname.'={divclass:"anylinkmenu", inlinestyle:"", linktarget:""} //First menu variable. Make sure "anylinkmenu1" is a unique name!
		'.$menuname.'.items=[';
	foreach($submenu as $sName=>$url) {
	$mess += '
			["'.$sName.'", "'.$url.'"],
    ';
	}
	$mess += '	
		]	
	';
	return $mess;
}
